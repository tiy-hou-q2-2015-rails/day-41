<div class="page-header">
  <h1>Submittals <small>Because we need another photo sharing site</small></h1>
</div>

<div class="text-right">
  <%= link_to 'New Submittal', new_submittal_path, class: "btn btn-default" %>
</div>


<div class="submittals">
  <% @submittals.each do |submittal| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to submittal_path(id: submittal.id) do %>
        <%= image_tag submittal.photo.url(:thumb), class: "img-responsive img-thumbnail" %>
      <% end %>
    </div>
  <% end %>
</div>
